<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TVTabItem">
        <attr name="android:text"/>
        <attr name="android:icon"/>
        <attr name="android:layout"/>
    </declare-styleable>

    <declare-styleable name="TvTabLayout">
        <attr name="tvTabIndicatorResId" format="reference" />
        <attr name="tvTabIndicatorWidth" format="dimension"/>
        <attr name="tvTabIndicatorHeight" format="dimension"/>
        <attr name="tvTabIndicatorBackgroundHeight" format="dimension"/>
        <attr name="tvTabIndicatorBackgroundColor" format="color"/>
        <attr name="tvTabContentStart" format="dimension"/>
        <attr name="tvTabContentBottom" format="dimension"/>
        <attr name="tvTabBackground" format="reference"/>
        <attr name="tvTabCircleDotRadius" format="dimension" />
        <attr name="tvTabCircleDotColor" format="color|reference" />
        <attr name="tvTabScrollMode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>
        <attr name="tvTabGravity">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="fill" value="3"/>
        </attr>
        <attr name="tvTabIndicatorGravity">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="tvTabMinWidth" format="dimension"/>
        <attr name="tvTabMaxWidth" format="dimension"/>

        <attr name="tvTabTexSize" format="dimension"/>
        <attr name="tvTabTextColor" format="color|reference"/>
        <attr name="tvTabTextSelectedScale" format="float"/>
        <attr name="tvTabTextSelectedCentered" format="boolean"/>

        <attr name="tvTabPaddingStart" format="dimension"/>
        <attr name="tvTabPaddingTop" format="dimension"/>
        <attr name="tvTabPaddingEnd" format="dimension"/>
        <attr name="tvTabPaddingBottom" format="dimension"/>
        <attr name="tvTabPadding" format="dimension"/>
    </declare-styleable>

    <dimen name="tvTabLayout_tab_scrollable_min_width">72dp</dimen>
    <dimen name="tvTabLayout_tab_text_size">14sp</dimen>
    <dimen name="tvTabLayout_tab_text_size_2line">12sp</dimen>
</resources>